{
  "manifest_version": 3,
  "name": "AI Course Planner Assistant",
  "version": "1.0.0",
  "description": "An AI-powered assistant that helps students plan their class schedules.",
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting", "tabs"],
  "content_scripts": [
    {
      "matches": ["https://my.sa.ucsb.edu/*"],
      "js": ["content/courseAutomation.js"]
    }
  ]
}

